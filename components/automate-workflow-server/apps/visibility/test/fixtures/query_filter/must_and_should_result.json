{
  "query": {
    "bool": {
      "filter" : [
        {
          "term": {
            "exists": "true"
          }
        },
        {
          "term": {
            "status": "missing"
          }
        },
        {
          "term": {
            "cookbooks.raw": "cookbook_name"
          }
        },
        {
          "term": {
            "roles.raw": "role_name"
          }
        },
        {
          "term": {
            "not_listed" : "not_listed_name"
          }
        },
        {
          "wildcard": {
            "wildcard_case" : "*wild*"
          }
        }
      ],
      "should": [
        {
          "term": {
            "cookbooks.raw": "cookbook_name_2"
          }
        },
        {
          "term": {
            "roles.raw": "role_name_2"
          }
        },
        {
          "wildcard": {
            "wildcard_case" : "*wild_2*"
          }
        }
      ],
      "minimum_should_match": 1
    }
  }
}
