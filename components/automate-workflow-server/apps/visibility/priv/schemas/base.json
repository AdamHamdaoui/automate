{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Base definitions shared by other schemas",

  "definitions": {
    "must_should_filter": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "must": { "$ref": "#/definitions/filter_items" },
        "should": { "$ref": "#/definitions/filter_items" }
      }
    },
    "filter_items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "patternProperties": {
          "^(\\w|\\.)*$": {
            "type": "string"
          }
        }
      }
    },
    "range_without_interval": {
      "type": "object",
      "properties": {
        "start_time": {
          "type": "string"
        },
        "end_time": {
          "type": "string"
        }
      },
      "required": ["start_time", "end_time"],
      "additionalProperties": false
     },
    "range_with_interval": {
      "type": "object",
      "properties": {
        "start_time": {
          "type": "string"
        },
        "end_time": {
          "type": "string"
        },
        "interval": {
          "type": "string"
        }
      },
      "required": ["start_time", "end_time", "interval"],
      "additionalProperties": false
    }
  }
}
